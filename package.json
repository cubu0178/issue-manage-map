{
  "name": "Issue-Manage-Map",
  "version": "0.0.1",
  "description": "Real-time map that shows maintenance issues, assists with task scheduling, and allows issue reporting.",
  "main": "index.jsx",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config internals/webpack/webpack.prod.js --color -p --progress --hide-modules --display-optimization-bailout",
    "lint": "eslint . --fix --ext .jsx --ext .js",
    "test": "cross-env NODE_ENV=test jest",
    "start": "cross-env NODE_ENV=development node ./server/dev.js"
  },
  "license": "Apache-2.0",
  "babel": {
    "presets": [
      "env",
      "stage-0",
      "react"
    ],
    "env": {
      "development": {
        "presets": [
          "react-hmre"
        ]
      },
      "production": {
        "presets": []
      },
      "test": {
        "presets": []
      }
    },
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run lint"
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/internals/jest/setup.js",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/internals/mocks/file.js",
      "\\.(css)$": "identity-obj-proxy"
    }
  },
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.9",
    "cssnano": "^3.10.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.17.0",
    "eslint-plugin-react": "^7.6.1",
    "express": "^4.16.2",
    "file-loader": "^1.1.6",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.15.0-rc.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.3.0",
    "postcss-loader": "^2.1.0",
    "precss": "^3.1.0",
    "react-hot-loader": "^3.1.3",
    "style-loader": "^0.20.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.11.0",
    "webpack-combine-loaders": "^2.0.3",
    "webpack-dev-middleware": "^2.0.5",
    "webpack-hot-middleware": "^2.21.0"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2"
  }
}
